<resources>
    <!-- Base application theme -->
    <style name="Theme.CVBuilder" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowBackground">@color/light_gray</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
    </style>

    <!-- Splash screen theme -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <!-- Button styles -->
    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">12dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@animator/button_state_list_animator</item>
    </style>
    
    <style name="AppButton.Primary">
        <item name="backgroundTint">@color/primary</item>
    </style>
    
    <style name="AppButton.Secondary">
        <item name="backgroundTint">@color/secondary_accent</item>
    </style>
    
    <style name="AppButton.Accent">
        <item name="backgroundTint">@color/accent</item>
    </style>
    
    <style name="AppButton.Danger">
        <item name="backgroundTint">@color/secondary_accent</item>
    </style>
    
    <!-- Card styles -->
    <style name="AppCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
        <item name="contentPadding">16dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="rippleColor">@color/primary_light</item>
    </style>
</resources>

