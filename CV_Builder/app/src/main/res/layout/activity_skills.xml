<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="@drawable/splash_background"
    android:padding="20dp">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skills &amp; Certifications"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:paddingBottom="16dp" />

    <!-- Scrollable Layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Skills Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Your Skills"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:id="@+id/skillsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <Button
                android:id="@+id/btnAddSkill"
                style="@style/CustomButton"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Add Skill"
                android:textSize="16sp"
                android:layout_marginTop="10dp" />

            <!-- Certifications Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Certifications"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="15dp" />

            <LinearLayout
                android:id="@+id/certificationsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <Button
                android:id="@+id/btnAddCertification"
                style="@style/CustomButton"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Add Certification"
                android:textSize="16sp"
                android:layout_marginTop="10dp" />

            <!-- Save Button -->
            <Button
                android:id="@+id/btnSaveSkills"
                style="@style/CustomButton"
                android:text="Save"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#E7D538"
                android:padding="13dp"
                android:textColor="#000000"
                android:elevation="4dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
