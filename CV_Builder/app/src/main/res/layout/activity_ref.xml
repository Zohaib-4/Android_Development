<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_background"
    android:id="@+id/main"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reference"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:paddingBottom="16dp" />


        <EditText
            android:id="@+id/etRefName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Name"
            android:textColor="#FFFFFF"
            android:textColorHint="#B0FFFFFF"
            android:backgroundTint="#80FFFFFF"
            android:padding="10dp"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/etRefJobTitle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Job Title"
            android:textColor="#FFFFFF"
            android:textColorHint="#B0FFFFFF"
            android:backgroundTint="#80FFFFFF"
            android:padding="10dp"
            android:inputType="text" />

        <EditText
            android:id="@+id/etRefCompany"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Company"
            android:textColor="#FFFFFF"
            android:textColorHint="#B0FFFFFF"
            android:backgroundTint="#80FFFFFF"
            android:padding="10dp"
            android:inputType="text" />

        <EditText
            android:id="@+id/etRefEmail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Email"
            android:textColor="#FFFFFF"
            android:textColorHint="#B0FFFFFF"
            android:backgroundTint="#80FFFFFF"
            android:padding="10dp"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/etRefPhone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Phone Number"
            android:textColor="#FFFFFF"
            android:textColorHint="#B0FFFFFF"
            android:backgroundTint="#80FFFFFF"
            android:padding="10dp"
            android:inputType="phone" />


        <Button
            android:id="@+id/btnSaveReferences"
            style="@style/CustomButton"
            android:text="Save"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#E7D538"
            android:padding="13dp"
            android:textColor="#000000"
            android:elevation="4dp" />

    </LinearLayout>
</ScrollView>
