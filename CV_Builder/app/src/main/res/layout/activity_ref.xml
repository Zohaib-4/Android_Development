<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_background"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="References"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:paddingBottom="16dp" />

        <!-- Reference 1 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reference 1"
            android:textSize="18sp"
            android:textColor="#E7D538"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/etRef1Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:textColor="#FFFFFF"
            android:textColorHint="#B0FFFFFF"
            android:backgroundTint="#80FFFFFF"
            android:padding="10dp"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/etRef1JobTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Job Title"
            android:textColor="#FFFFFF"
            android:textColorHint="#B0FFFFFF"
            android:backgroundTint="#80FFFFFF"
            android:padding="10dp"
            android:inputType="text" />

        <EditText
            android:id="@+id/etRef1Company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Company"
            android:textColor="#FFFFFF"
            android:textColorHint="#B0FFFFFF"
            android:backgroundTint="#80FFFFFF"
            android:padding="10dp"
            android:inputType="text" />

        <EditText
            android:id="@+id/etRef1Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textColor="#FFFFFF"
            android:textColorHint="#B0FFFFFF"
            android:backgroundTint="#80FFFFFF"
            android:padding="10dp"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/etRef1Phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:textColor="#FFFFFF"
            android:textColorHint="#B0FFFFFF"
            android:backgroundTint="#80FFFFFF"
            android:padding="10dp"
            android:inputType="phone" />

        <!-- Reference 2 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reference 2"
            android:textSize="18sp"
            android:textColor="#E7D538"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/etRef2Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:textColor="#FFFFFF"
            android:textColorHint="#B0FFFFFF"
            android:backgroundTint="#80FFFFFF"
            android:padding="10dp"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/etRef2JobTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Job Title"
            android:textColor="#FFFFFF"
            android:textColorHint="#B0FFFFFF"
            android:backgroundTint="#80FFFFFF"
            android:padding="10dp"
            android:inputType="text" />

        <EditText
            android:id="@+id/etRef2Company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Company"
            android:textColor="#FFFFFF"
            android:textColorHint="#B0FFFFFF"
            android:backgroundTint="#80FFFFFF"
            android:padding="10dp"
            android:inputType="text" />

        <EditText
            android:id="@+id/etRef2Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textColor="#FFFFFF"
            android:textColorHint="#B0FFFFFF"
            android:backgroundTint="#80FFFFFF"
            android:padding="10dp"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/etRef2Phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:textColor="#FFFFFF"
            android:textColorHint="#B0FFFFFF"
            android:backgroundTint="#80FFFFFF"
            android:padding="10dp"
            android:inputType="phone" />

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSaveReferences"
            style="@style/CustomButton"
            android:text="Save"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#E7D538"
            android:padding="13dp"
            android:textColor="#000000"
            android:elevation="4dp" />

    </LinearLayout>
</ScrollView>
