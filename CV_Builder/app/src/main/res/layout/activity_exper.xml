<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="@drawable/splash_background"
    android:padding="20dp">

    <!-- Title: Work Experience -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Work Experience"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:paddingBottom="16dp"
        android:drawablePadding="8dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Company Name -->
            <EditText
                android:id="@+id/etCompanyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Company Name"
                android:textColor="#FFFFFF"
                android:textColorHint="#B0FFFFFF"
                android:backgroundTint="#80FFFFFF"
                android:padding="12dp"
                android:layout_marginTop="10dp"
                android:inputType="text" />

            <!-- Job Title -->
            <EditText
                android:id="@+id/etJobTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Job Title"
                android:textColor="#FFFFFF"
                android:textColorHint="#B0FFFFFF"
                android:backgroundTint="#80FFFFFF"
                android:padding="12dp"
                android:layout_marginTop="10dp"
                android:inputType="text" />

            <!-- Start Date -->
            <EditText
                android:id="@+id/etStartDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Start Date (DD/MM/YYYY)"
                android:textColor="#FFFFFF"
                android:textColorHint="#B0FFFFFF"
                android:backgroundTint="#80FFFFFF"
                android:padding="12dp"
                android:layout_marginTop="10dp"
                android:inputType="date"
                android:focusable="false"
                android:clickable="true" />

            <!-- End Date -->
            <EditText
                android:id="@+id/etEndDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="End Date (DD/MM/YYYY)"
                android:textColor="#FFFFFF"
                android:textColorHint="#B0FFFFFF"
                android:backgroundTint="#80FFFFFF"
                android:padding="12dp"
                android:layout_marginTop="10dp"
                android:inputType="date"
                android:focusable="false"
                android:clickable="true" />

            <!-- Responsibilities -->
            <EditText
                android:id="@+id/etResponsibilities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Responsibilities"
                android:textColor="#FFFFFF"
                android:textColorHint="#B0FFFFFF"
                android:backgroundTint="#80FFFFFF"
                android:padding="12dp"
                android:layout_marginTop="10dp"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:gravity="top" />

            <!-- Technologies Used -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Technologies Used"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="15dp" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupTechnologies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:singleSelection="false">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipPython"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:text="Python"
                    android:checkable="true"
                    android:textColor="@color/white" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipDjango"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:text="Django"
                    android:checkable="true"
                    android:textColor="@color/white" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipReact"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:text="React"
                    android:checkable="true"
                    android:textColor="@color/white" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipML"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:text="Machine Learning"
                    android:checkable="true"
                    android:textColor="@color/white" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipBlockchain"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:text="Blockchain"
                    android:checkable="true"
                    android:textColor="@color/white" />
            </com.google.android.material.chip.ChipGroup>

            <!-- Submit Button -->
            <Button
                android:id="@+id/btnSubmitExperience"
                style="@style/CustomButton"
                android:text="Save Experience"
                android:layout_width="220dp"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:backgroundTint="#E7D538"
                android:padding="13dp"
                android:textColor="#000000"
                android:elevation="4dp"
                android:layout_marginTop="20dp"
                android:gravity="center" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
